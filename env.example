# PostgreSQL Database (Render)
# Usa "Internal Database URL" si el Web Service está en Render (recomendado)
# Usa "External Database URL" solo si necesitas conectarte desde fuera de Render
DATABASE_URL=postgresql://usuario:password@host:5432/database

# Groq API Configuration
GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions
GROQ_API_KEY=tu_api_key_aqui
# Modelo por defecto (opcional - se puede seleccionar dinámicamente en el endpoint /api/chat)
GROQ_MODEL=llama-3.3-70b-versatile

# Server Configuration
PORT=3000

